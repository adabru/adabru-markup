div.factsheet
  background-color #dee
  box-shadow 0px 0px 30px 10px #dee
  margin 20px
  width 70%
  > h1
    color #333
    text-shadow none
    padding 0
    font-size 1.5em
    background-color #bcc
    box-shadow 0px 0px 10px 10px #bcc
    font-weight bold
    margin-bottom 20px
  > ul
    list-style-type none
    > li:before
      content '📍 '
      color #bcc
