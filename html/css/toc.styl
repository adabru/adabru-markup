nav
  width: 160px
  max-width: 160px
  height: 100%
  flex: 1 6 20%
  z-index: 1
  box-sizing: border-box
  ul
    cursor: pointer
    padding: 0
    list-style: none
    li
      background: linear-gradient(to right, transparent 60%, #dde)
      padding: 2px 0 2px 5px
      &.highlight
        background: linear-gradient(to right, #dde, transparent 40%)
      a
        cursor: default
      &:hover
        background: linear-gradient(to right, transparent, #dde)
    ul
      font-size: .8em
      li
        padding-left: 15px
        border: none

article
  background-color #f8f8ff
  box-shadow 0px 0px 100px 100px #f8f8ff
  padding: 0px 10px
  width: 150px
  max-width: 800px
  margin: 0 auto
  flex: 3 1 60%
  position: relative
  .article_scroll
    height: 100%
    overflow: auto
    .pilcrow
      display: block
      width: 0
      height: 0
      position: relative
      color: rgba(1,1,1,.1)
      &:hover
        color: rgba(1,1,1,1)
    .blocks
      transition-duration: .5s
      transition-property: transform
      width: calc(100% - 20px)
  &.distant_view .blocks
    transform: scale(.25)
  .zoom_guide
    width: 100%
    height: 100%
    position: absolute
    left: 0px
    top: 0px
    background-color: rgba(green, 0)
    pointer-events: none
    transition-duration: .5s
    box-sizing: border-box
  &.distant_view .zoom_guide
    transform: scaleY(.25)
    background-color: rgba(green, .05)
